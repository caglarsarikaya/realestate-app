@model DetayViewModel
@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<link href="~/Content/themes/base/theme.css" rel="stylesheet" />
<link href="~/Content/themes/base/tabs.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<div class="container">
    <div class="row">
        <div class="property">
            <h1 class="property__title">@Model.KonutModel.Baslik<span class="property__city">@Model.KonutModel.Adres</span></h1>
            <div class="property__price"><strong>@($"{Model.KonutModel.Fiyat:c2}")</strong></div>
            <div class="social social--properties"><span class="social__title">Buradan paylaşın:</span><a href="#" class="social__item"><i class="fa fa-facebook"></i></a><a href="#" class="social__item"><i class="fa fa-twitter"></i></a><a href="#" class="social__item"><i class="fa fa-google-plus"></i></a></div>
            <div class="clearfix"></div>
            <div class="property__slider">
                <div class="property__ribon">@Model.KonutModel.Durum</div>
                <div id="properties-banner" class="slider slider--small">
                    <div class="slider__block js-slick-slider">
                        @if (Model.KonutModel.FotografYollari.Count == 0)
                        {
                            <div class="slider__item">
                                <div class="slider__img">
                                    <img data-lazy="~/img/nofoto.jpg" src="~/img/nofoto.jpg" alt="">
                                </div>
                            </div>
                        }
                        else
                        {
                            foreach (var item in Model.KonutModel.FotografYollari)
                            {
                                <div class="slider__item">
                                    <div class="slider__img">
                                        <img data-lazy="~/@item" src="~/@item" alt="@Model.KonutModel.Baslik">
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <div class="slider__controls">
                        <button type="button" class="slider__control slider__control--prev js-slick-prev">
                            <svg class="slider__control-icon">
                                <use xlink:href="#icon-arrow-left"></use>
                            </svg>
                        </button><span class="slider__current js-slick-current">1 /</span><span class="slider__total js-slick-total">9</span>
                        <button type="button" class="slider__control slider__control--next js-slick-next">
                            <svg class="slider__control-icon">
                                <use xlink:href="#icon-arrow-right"></use>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            <div class="property__info">
                <div class="property__id"><span>Ilan ID :</span><strong> @Model.KonutModel.ID</strong></div>
                <div class="property__type"><span>Ilan Türü:</span><strong>@Model.KonutModel.Durum</strong></div>
            </div>
            <div class="property__plan">
                <dl class="property__plan-item">
                    <dt class="property__plan-icon">
                        <svg>
                            <use xlink:href="#icon-area"></use>
                        </svg>
                    </dt>
                    <dd class="property__plan-title">Metre Kare</dd>
                    <dd class="property__plan-value">@Model.KonutModel.Metrekare m²</dd>
                </dl>
                <dl class="property__plan-item">
                    <dt class="property__plan-icon property__plan-icon--window">
                        <svg>
                            <use xlink:href="#icon-window"></use>
                        </svg>
                    </dt>
                    <dd class="property__plan-title">Yatak Odası</dd>
                    <dd class="property__plan-value">1</dd>
                </dl>
                <dl class="property__plan-item">
                    <dt class="property__plan-icon property__plan-icon--bathrooms">
                        <svg>
                            <use xlink:href="#icon-bathrooms"></use>
                        </svg>
                    </dt>
                    <dd class="property__plan-title">Banyo</dd>
                    <dd class="property__plan-value">1</dd>
                </dl>
                <dl class="property__plan-item">
                    <dt class="property__plan-icon">
                        <svg>
                            <use xlink:href="#icon-bedrooms"></use>
                        </svg>
                    </dt>
                    <dd class="property__plan-title">Odalar</dd>
                    <dd class="property__plan-value">2</dd>
                </dl>
                <dl class="property__plan-item">
                    <dt class="property__plan-icon property__plan-icon--garage">
                        <svg>
                            <use xlink:href="#icon-garage"></use>
                        </svg>
                    </dt>
                    <dd class="property__plan-title">Garaj</dd>
                    <dd class="property__plan-value">0</dd>
                </dl>
            </div>
            <div class="property__params">
                <h4 class="property__subtitle">Özellikler</h4>
                <ul class="property__params-list">
                    <li>Yapım Yılı:<strong>2010</strong></li>
                    <li>Park Alanı:<strong>24</strong></li>
                    <li>Garaj Alanı:<strong>50</strong></li>
                    <li>Yapı:<strong>Hazır</strong></li>
                    <li>Harici<strong>Teras</strong></li>
                    <li>Çatı<strong>Kiremit</strong></li>
                    <li>Bina Malzemesi<strong>Biriket</strong></li>
                    <li>Yapım tipi<strong>Şirket</strong></li>
                    <li>Kapılar &amp; Penceler:<strong>Meşe ağaç, Akça ağaç</strong></li>
                    <li>Şömine<strong> Tuğla</strong></li>
                    <li>Şömine Yakıtı<strong>Gaz &amp; Ağaç</strong></li>
                    <li>Şömine Yeri<strong>Salon</strong></li>
                    <li>Zemin<strong>Parke</strong></li>
                    
                </ul>
            </div>
            <div class="property__params">
                <h4 class="property__subtitle">İmkanlar</h4>
                <ul class="property__params-list property__params-list--options">
                    <li>Fibernet</li>
                    <li>Klima</li>
                    <li>Spa</li>
                    <li>Havuz</li>
                    <li>Kalörifer</li>
                    
                </ul>
            </div>
            
            @*<button type="button" class="property__files-show js-unhide">Show attachments</button>*@
            <div class="property__map map map--properties">
                <div id="tabs">
                    <ul>
                        <li id="konum"><a href="#tabs-1">Konumu</a></li>
                        <li id="panoroma"><a href="#tabs-2">Sokak Görünümü</a></li>
                    </ul>
                    <div id="tabs-1">
                        <div id="harita"></div>
                    </div>
                    <div id="tabs-2">
                        <div id="pano"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end of block .property-->
        <div class="sidebar">
            <div class="worker worker--sidebar-advanced worker--sidebar-property js-unhide-block">
                <div data-animate-end="animate-end" class="worker__item vcard">
                    <h3 class="worker__name fn">
                        @Model.ProfilModel.Name @Model.ProfilModel.Surname
                    </h3>
                    <div class="worker__post">@Model.ProfilModel.Username</div>
                    <div class="worker__photo">
                        <a href="@Url.Action("Kullanici", "Ilan", new { id = Model.KonutModel.KullaniciID })" class="item-photo item-photo--static">
                            <img src="../@Model.ProfilModel.AvatarPath" alt="@Model.ProfilModel.Name @Model.ProfilModel.Surname" class="photo">
                            <figure class="item-photo__hover"><span class="item-photo__more">View Details</span></figure>
                        </a>
                    </div>
                    <div class="worker__intro">
                        <button type="button" class="worker__show js-unhide">Contact agent</button>
                        <div class="worker__listings"><i class="worker__favorites worker__favorites--highlight"></i> Güvenilir-<a href="agent_listing.html">12 kişi onayladı</a></div>
                        <!-- end of block .worker__listings-->
                        <div class="worker__intro-row">
                            <div class="worker__intro-col">
                                <div class="worker__contacts">
                                    <div class="tel"><span class="type">Tel.</span><a href="tel:05313869225" class="uri value">(0) 531 3869225</a></div>
                                    <div class="tel"><span class="type">Mob.</span><a href="tel:05313869225" class="uri value">(0) 531 3869225</a></div>
                                    <div class="email"><span class="type">Email</span><a href="mailto:caglarcansarikaya@hotmail.com" class="uri value">caglarcansarikaya@hotmail.com</a></div>
                                    <div class="skype"><span class="type">Skype</span><a href="skype:caglarcan?call" class="uri value">caglarcan</a></div>
                                </div>
                                <!-- end of block .worker__contacts-->
                            </div>
                            <div class="worker__intro-col">
                                <div class="social social--worker"><a href="#" class="social__item"><i class="fa fa-facebook"></i></a><a href="#" class="social__item"><i class="fa fa-linkedin"></i></a><a href="#" class="social__item"><i class="fa fa-twitter"></i></a><a href="#" class="social__item"><i class="fa fa-google-plus"></i></a></div>
                            </div>
                        </div>
                    </div>
                    <div class="worker__descr">
                        <p>meraba evimi satıyorum acil ihtiyacımdan ötürü</p>
                    </div>
                    <!-- end of block .worker__descr-->
                    <div class="clearfix"></div>
                </div>
                <!-- end of block .worker__item-->
                <div class="worker__form">
                    <div class="form form--sidebar-workers">
                        <form action="#" method="POST" class="form__wrap js-contact-form">
                            <div class="form__row form-group">
                                <label for="in-form-name" class="form__label control-label">Adınız</label>
                                <input id="in-form-name" type="text" name="name" required class="form__in form__in--text form-control">
                            </div>
                            <div class="form__row form__row--tel form-group">
                                <label for="in-form-phone" class="form__label control-label">Numaranız</label>
                                <input id="in-form-phone" type="text" name="phone" class="form__in form__in--text form-control">
                            </div>
                            <div class="form__row form__row--email form-group">
                                <label for="in-form-email" class="form__label control-label">E-mail</label>
                                <input id="in-form-email" type="email" name="email" required data-parsley-trigger="change" class="form__in form__in--text form-control">
                            </div>
                            <div class="form__row form-group">
                                <label for="in-form-message" class="form__label control-label">Mesajınız</label>
                                <textarea id="in-form-message" name="message" required data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-validation-threshold="10" data-parsley-minlength-message="You need to enter at least a 20 caracters long comment.." class="form__in form__in--textarea form-control"></textarea>
                            </div>
                            <div class="form__row">
                                <button type="submit" class="form__submit">Gönder</button>
                            </div>
                        </form>
                    </div>
                    <!-- end of block form-->
                </div>
            </div>
           
        </div>
        <div class="clearfix"></div>
       
            </div>
        </div>
    </div>
</div>

<script>
    $("#tabs").tabs();

    function koordinat() {
        var enlem = "@Model.KonutModel.Enlem";
        var boylam = "@Model.KonutModel.Boylam";
        var enlemboylam = new google.maps.LatLng(enlem, boylam);
        var ayar = {
            center: enlemboylam,
            zoom: 15,
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            mapTypeControl: true,
            navigationControlOptions: { style: google.maps.NavigationControlStyle.SMALL }
        };
        var haritatutucu = document.getElementById("harita");
        var googleHarita = new google.maps.Map(haritatutucu, ayar);
        var imlec = new google.maps.Marker({
            position: enlemboylam,
            map: googleHarita,
            title: "@Model.KonutModel.Baslik"
        });

        var panorama = new google.maps.StreetViewPanorama(
            document.getElementById('pano'), {
                position: enlemboylam,
                pov: {
                    heading: 34,
                    pitch: 10
                }
            });
        googleHarita.setStreetView(panorama);
        var transitLayer = new google.maps.TransitLayer();
        transitLayer.setMap(googleHarita);
    }
    $(document).ready(function () {
        koordinat();
    });
    $("#konum").click(function () {
        koordinat();
    });
    $("#panoroma").click(function () {
        koordinat();
    });
</script>
<style>
    #harita, #pano {
        width: 100%;
        height: 300px;
        background-color: #f74027;
        margin-top: 50px;
    }

    #pano {
        background-color: #00ffff;
    }
</style>