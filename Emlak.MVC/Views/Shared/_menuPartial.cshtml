<div class="container">
    <div class="navbar__row js-navbar-row">
        <a href="@Url.Action("Index","Home")" class="navbar__brand">
            
            
        </a>
        <div id="navbar-collapse-1" class="navbar__wrap">
            <ul class="navbar__nav">
                <li class="navbar__item"><a href="@Url.Action("Index","Home")" class="navbar__link">Ana Sayfa</a></li>
                <li class="navbar__item js-dropdown">
                    <a class="navbar__link">
                        Emlak
                        <svg class="navbar__arrow">
                            <use xlink:href="#icon-arrow-right"></use>
                        </svg>
                    </a>
                    <div role="menu" class="js-dropdown-menu navbar__dropdown navbar__dropdown--colls-1">
                        <button class="navbar__back js-navbar-submenu-back">
                            <svg class="navbar__arrow">
                                <use xlink:href="#icon-arrow-left"></use>
                            </svg>Back
                        </button>
                        <div class="navbar__submenu">
                            <ul class="navbar__subnav">
                                <li class="navbar__subitem active">
                                    <a href="@Url.Action("Index","Ilan")" class="navbar__sublink js-navbar-sublink">
                                        Tüm İlanlar
                                    </a>
                                </li>
                                <li class="navbar__subitem active">
                                    <a href="@Url.Action("Ekle","Ilan")" class="navbar__sublink js-navbar-sublink">
                                        Yeni İlan Ekle
                                    </a>
                                </li>
                                <li class="navbar__subitem active">
                                    <a href="@Url.Action("IlanListele","Ilan")" class="navbar__sublink js-navbar-sublink">
                                        İlanlarım
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </li>
                
                <li class="navbar__item js-dropdown">
                    <a class="navbar__link">
                        Hesap
                        <svg class="navbar__arrow">
                            <use xlink:href="#icon-arrow-right"></use>
                        </svg>
                    </a>
                    <div role="menu" class="js-dropdown-menu navbar__dropdown">
                        <button class="navbar__back js-navbar-submenu-back">
                            <svg class="navbar__arrow">
                                <use xlink:href="#icon-arrow-left"></use>
                            </svg>Back
                        </button>
                        <div class="navbar__submenu">
                            <ul class="navbar__subnav">
                                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                                {
                                    <li class="navbar__subitem">
                                        <a href="@Url.Action("Profile","Account")" class="navbar__sublink js-navbar-sublink">
                                            @HttpContext.Current.User.Identity.GetUserName() Profili
                                        </a>
                                    </li>
                                    <li class="navbar__subitem">
                                        <a href="@Url.Action("Logout","Account")" class="navbar__sublink js-navbar-sublink">
                                            Çıkış Yap
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="navbar__subitem">
                                        <a href="@Url.Action("Login","Account")" class="navbar__sublink js-navbar-sublink">
                                            Giriş Yap
                                        </a>
                                    </li>
                                    <li class="navbar__subitem">
                                        <a href="@Url.Action("Register","Account")" class="navbar__sublink js-navbar-sublink">
                                            Kayıt Ol
                                        </a>
                                    </li>
                                    <li class="navbar__subitem">
                                        <a href="@Url.Action("RecoverPassword","Account")" class="navbar__sublink js-navbar-sublink">
                                            Şifremi Unuttum
                                        </a>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </li>

                @if (HttpContext.Current.User.IsInRole("Admin"))
                {
                    <li class="navbar__item">
                        <a href="@Url.Action("Index","Admin")" class="navbar__link">Yönetim Paneli</a>
                    </li>
                }
            </ul>
            <!-- end of block  navbar__nav-->
        </div>
    </div>
</div>